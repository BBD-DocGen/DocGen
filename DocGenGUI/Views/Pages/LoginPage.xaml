<Page x:Class="DocGen.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DocGen.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Button IsEnabled="{Binding Loading}" Content="{Binding LoginBtnText}" Width="250" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Command="{Binding LoginCommand}"/>
    </Grid>
</Page>
